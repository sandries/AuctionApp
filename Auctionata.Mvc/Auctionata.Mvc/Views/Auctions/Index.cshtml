@using Auctionata.Mvc.Models

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    @foreach (var auction in ((List<Auction>)ViewData["Auctions"]))
    {
        <div class="col-sm-6 col-md-6">
            <div class="thumbnail" style="margin: 10px; height: 530px;">
                <img src="@auction.Picture" alt="...">
                <div class="caption">
                    <h3>@auction.Name</h3>
                    <p>@auction.Description</p>
                    <p>
                      @Html.ActionLink("View auction", "Index", "Auction", new { code = auction.Code }, new { @class= "btn btn btn-link" })
                    </p>
                </div>
            </div>
        </div>
    }
</div>


